From: Wookey <wookey@debian.org>
Date: Tue, 6 Dec 2016 21:14:03 +0000
Subject: Ensure CGI scripts are cleaned and regenerated

Currently the htags .cgi scripts are not regenerated on a normal
build. This leaves them with whatever perl path was set at tarball
creation time
---
 configure         | 4 +---
 htags/Makefile.am | 1 +
 htags/Makefile.in | 1 +
 3 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/configure b/configure
index d7e95f0..8da5364 100755
--- a/configure
+++ b/configure
@@ -561,7 +561,7 @@ as_tr_cpp="eval sed 'y%*$as_cr_letters%P$as_cr_LETTERS%;s%[^_$as_cr_alnum]%_%g'"
 # Sed expression to map a string onto a valid variable name.
 as_tr_sh="eval sed 'y%*+%pp%;s%[^_$as_cr_alnum]%_%g'"
 
-lt_ltdl_dir='libltdl'
+lt_ltdl_dir='/usr/share/libtool/libltdl'
 
 SHELL=${CONFIG_SHELL-/bin/sh}
 
@@ -818,7 +818,6 @@ with_aix_soname
 with_gnu_ld
 with_sysroot
 enable_libtool_lock
-with_included_ltdl
 with_ltdl_include
 with_ltdl_lib
 enable_ltdl_install
@@ -17513,7 +17512,6 @@ do
     "libparser/Makefile") CONFIG_FILES="$CONFIG_FILES libparser/Makefile" ;;
     "plugin-factory/Makefile") CONFIG_FILES="$CONFIG_FILES plugin-factory/Makefile" ;;
     "plugin-factory/pygments_parser.py") CONFIG_FILES="$CONFIG_FILES plugin-factory/pygments_parser.py" ;;
-    "libltdl/Makefile") CONFIG_FILES="$CONFIG_FILES libltdl/Makefile" ;;
 
   *) as_fn_error $? "invalid argument: \`$ac_config_target'" "$LINENO" 5;;
   esac
diff --git a/htags/Makefile.am b/htags/Makefile.am
index c734b82..ec659f6 100644
--- a/htags/Makefile.am
+++ b/htags/Makefile.am
@@ -27,6 +27,7 @@ htags_DEPENDENCIES = $(LDADD)
 man_MANS = htags.1
 
 gtagsdir = ${datadir}/gtags
+CLEANFILES = global.cgi completion.cgi
 gtags_DATA = global.cgi completion.cgi \
 	jscode_suggest jscode_treeview style.css
 EXTRA_DIST = $(man_MANS) $(gtags_DATA) manual.in global.cgi.in completion.cgi.in \
diff --git a/htags/Makefile.in b/htags/Makefile.in
index a63e067..9407d51 100644
--- a/htags/Makefile.in
+++ b/htags/Makefile.in
@@ -377,6 +377,7 @@ noinst_HEADERS = htags.h anchor.h cache.h common.h incop.h path2url.h lexcommon.
 htags_DEPENDENCIES = $(LDADD)
 man_MANS = htags.1
 gtagsdir = ${datadir}/gtags
+CLEANFILES = global.cgi completion.cgi
 gtags_DATA = global.cgi completion.cgi \
 	jscode_suggest jscode_treeview style.css
 
